//Creating a function

function say_Something() {
echo "Hello world";

}

//Calling the function

say_Something();

//Create a function to add two numbers

function add_twoNumbers() {

echo 345 + 234;

}

//calling the function
add_twoNumbers();


//Using an init function to call all the functions

function init() {

add_twoNumbers();
say_Something();

}

//calling the init function

init();
